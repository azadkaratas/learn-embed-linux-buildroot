#!/bin/sh

case $1 in
    start)
	printf "Starting webctl: "
	start-stop-daemon --start --background --exec node /usr/html/app.js > /var/log/nodejs_app.log
	[ $? = 0 ] && echo "OK" || echo "FAIL"
	;;
    stop)
	printf "Stopping webctl: "
	killall node
	[ $? = 0 ] && echo "OK" || echo "FAIL"
	;;
    restart)
	$0 stop
	$0 start
	;;
    *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
	;;
esac
